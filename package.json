{
  "name": "@agogpixel/cavy",
  "version": "0.1.0",
  "description": "Opinionated tool for NPM package development.",
  "keywords": [
    "npm",
    "package",
    "development"
  ],
  "author": "kidthales <kidthales@agogpixel.com>",
  "license": "MIT",
  "homepage": "https://agogpixel.github.io/cavy",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/agogpixel/cavy.git"
  },
  "bugs": {
    "url": "https://github.com/agogpixel/cavy/issues"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": {
    "cavy": "./bin/run"
  },
  "scripts": {
    "postinstall": "husky install",
    "start": "jest --watch",
    "test": "jest --coverage",
    "prebuild": "npm run cavy -- clean dist",
    "build": "tsc --project tsconfig.build.json && npm run build-docs",
    "postbuild": "npm run cavy -- copy dist && shx cp LICENSE README.md dist && cp -r bin dist",
    "build-docs": "typedoc --out dist/docs --entryPointStrategy expand src/ && shx cp LICENSE dist/docs",
    "smoke-test": "cd smoke-test && npm install && npm test",
    "create-tarball": "npm run cavy -- pack dist",
    "publish-tarball": "npm run cavy -- publish dist",
    "update-readme": "oclif-dev readme && prettier --write README.md",
    "lint": "npm run cavy -- lint --all",
    "lint-fix": "npm run cavy -- lint --all --fix",
    "clean": "npm run cavy -- clean --all",
    "cavy": "ts-node ./bin/run"
  },
  "dependencies": {
    "@oclif/command": "^1.8.7",
    "@oclif/config": "^1.18.1",
    "@oclif/plugin-help": "^3.2.10",
    "comment-json": "^4.1.1",
    "dot-prop": "^6.0.1",
    "joi": "^17.5.0",
    "semver": "^7.3.5",
    "shelljs": "^0.8.4",
    "tslib": "^2.3.1",
    "type-fest": "^2.8.0",
    "untar-to-memory": "^1.0.3"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1.26.6",
    "@oclif/test": "^1.2.8",
    "@types/jest": "^27.0.3",
    "@types/node": "^14.14.31",
    "@types/semver": "^7.3.9",
    "@types/shelljs": "^0.8.9",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "chai": "^4.3.4",
    "eslint": "^8.4.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "globby": "^10.0.2",
    "husky": "^7.0.4",
    "jest": "^27.4.3",
    "lint-staged": "^12.1.2",
    "prettier": "^2.5.0",
    "shx": "^0.3.3",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typedoc": "^0.22.10",
    "typescript": "^4.5.2"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "/bin",
    "/lib",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "oclif": {
    "commands": "./lib/commands",
    "bin": "cavy",
    "plugins": [
      "@oclif/plugin-help"
    ],
    "hooks": {
      "init": "./lib/hooks/init/shelljs-init-hook"
    }
  },
  "lint-staged": {
    "*.(js|ts)": "eslint --cache --fix",
    "*.(json|md|yml)": "prettier --write"
  }
}
